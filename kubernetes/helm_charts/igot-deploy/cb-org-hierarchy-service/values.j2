### Default variable file for lms-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ docker_hub_url }}


env:
  javaoptions: {{sb_cb_ext_java_mem_limit|default('-Xmx4096m')}}

replicaCount: {{sb_cb_ext_replicacount|default(1)}}
repository: {{ image_sb_cb_ext_service }}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{sb_cb_ext_cpu_req|default('100m')}}
    memory: {{sb_cb_ext_mem_req|default('200Mi')}}
  limits:
    cpu: {{ sb_cb_ext_cpu_limit|default('2')}}
    memory: {{sb_cb_ext_mem_limit|default('6144Mi')}}
network:
  port: {{ service_sb_cb_ext_port }}
  targetport: {{ service_sb_cb_ext_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ lms_maxsurge|default('25%') }}
  maxunavailable: {{ lms_maxunavailable|default('25%') }}

frac_backend_basepath: {{ frac_backend_basepath | default('/keys/') }}

serviceMonitor:
  enabled: true
  labels: # labels with which the prometheus choose the serviceMonitor
    app: prometheus-operator
    release: prometheus-operator

autoscaling:
  enabled: {{ sb_cb_ext_service_autoscaling_enabled | default('false') }}
  minReplicas: {{ sb_cb_ext_service_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ sb_cb_ext_service_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ sb_cb_ext_service_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ sb_cb_ext_service_autoscaling_targetMemoryUtilizationPercentage|default('') }}

