### Default variable file for lms-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ docker_hub_url }}


env:
  javaoptions: {{cb_ext_assessment_service_java_mem_limit|default('-Xmx4096m')}}

replicaCount: {{cb_ext_assessment_service_replicacount|default(1)}}
repository: {{ image_cb_ext_assessment_service }}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{cb_ext_assessment_service_cpu_req|default('100m')}}
    memory: {{cb_ext_assessment_service_mem_req|default('200Mi')}}
  limits:
    cpu: {{ cb_ext_assessment_service_cpu_limit|default('2')}}
    memory: {{cb_ext_assessment_service_mem_limit|default('6144Mi')}}
network:
  port: {{ service_cb_ext_assessment_port }}
  targetport: {{ service_cb_ext_assessment_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ lms_maxsurge|default('25%') }}
  maxunavailable: {{ lms_maxunavailable|default('25%') }}

{{ cb_ext_assessment_service_liveness_readiness | to_nice_yaml }}

frac_backend_basepath: {{ frac_backend_basepath | default('/keys/') }}

serviceMonitor:
  enabled: true
  labels: # labels with which the prometheus choose the serviceMonitor
    app: prometheus-operator
    release: prometheus-operator

autoscaling:
  enabled: {{ cb_ext_assessment_service_service_autoscaling_enabled | default('false') }}
  minReplicas: {{ cb_ext_assessment_service_service_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ cb_ext_assessment_service_service_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ cb_ext_assessment_service_service_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ cb_ext_assessment_service_service_autoscaling_targetMemoryUtilizationPercentage|default('') }}

