### Default variable file for mentoring_interface-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ docker_hub_url }}


env:
  javaoptions: {{mentoring_interface_service_java_mem_limit|default('-Xmx4096m')}}

replicaCount: {{mentoring_interface_service_replicacount|default(1)}}
repository: {{ image_mentoring_interface_service }}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{mentoring_interface_service_cpu_req|default('100m')}}
    memory: {{mentoring_interface_service_mem_req|default('200Mi')}}
  limits:
    cpu: {{ mentoring_interface_service_cpu_limit|default('2')}}
    memory: {{mentoring_interface_service_mem_limit|default('1430Mi')}}
network:
  port: {{ service_mentoring_interface_service_port }}
  targetport: {{ service_mentoring_interface_service_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ mentoring_interface_maxsurge|default('25%') }}
  maxunavailable: {{ mentoring_interface_maxunavailable|default('25%') }}

environmentjs: |-
    ALLOWED_HOST= "{{ mentored_allowed_host}}"
    API_DOC_URL= "/interface/api-doc"
    APPLICATION_ENV= "development"
    APPLICATION_PORT= "3567"
    INSTALLED_PACKAGES= "sunbird-mentoring"
    MENTORING_SERVICE_BASE_URL= "http://mentoring-service:7101"
    NOTIFICATION_SERVICE_BASE_URL= "http://mentoring-notification-service:7201"
    RATE_LIMITER_ENABLED= "true"
    RATE_LIMITER_GENERAL_LIMIT= "50"
    RATE_LIMITER_NUMBER_OF_PROXIES= "3"
    RATE_LIMITER_PUBLIC_LOW_LIMIT= "5"
    REQUIRED_PACKAGES= "sunbird-mentoring@3.1.34"
    SCHEDULER_SERVICE_BASE_URL= "http://mentoring-scheduler-service:7401"
    SUPPORTED_HTTP_TYPES= "GET POST PUT PATCH DELETE"
    USER_SERVICE_BASE_URL= "http://learner-service:9000"
    SUNBIRD_USER_KAFKA_BROKERS="{{ kafka_servers_list }}"
    SUNBIRD_USER_KAFKA_GROUP_ID="mentorship-interface-group"
    SUNBIRD_USER_USER_UPDATE_KAFKA_TOPIC="{{env}}.mentorship.user.update"
    MENTORING_SERVICE_USER_UPDATE_ROUTE="/mentoring/v1/users/update"
    SUNBIRD_USER_KAFKA_CLIENT_ID="sunbird-user-package"
    MENTORING_INTERNAL_ACCESS_TOKEN="{{ mentoring_internal_access_token }}"
    SUNBIRD_MENTORING_NOTIFICATION_KAFKA_CLIENT_ID="kb-mentoring-notification"
    SUNBIRD_MENTORING_NOTIFICATION_KAFKA_BROKERS="{{ kafka_servers_list }}"
    SUNBIRD_MENTORING_NOTIFICATION_KAFKA_GROUP_ID="kb-mentoring-notifications"
    SUNBIRD_MENTORING_NOTIFICATION_KAFKA_TOPIC="{{env}}.mentor.notifications"
    SUNBIRD_NOTIFICAION_SEND_EMAIL_ROUTE="/api/notification/v1/notification/send/sync"
    SUNBIRD_NOTIFICAION_SERVICE_BASE_URL="https://{{ domain_name }}"
    SUNBIRD_NOTIFICATION_SENDER_EMAIL="{{sunbird_notification_sender_email}}"
    SUNBIRD_AUTHORIZATION_TOKEN="{{bearer_token}}"
    ROUTE_CONFIG_JSON_URLS_PATHS = "https://raw.githubusercontent.com/KB-iGOT/mentoring/refs/heads/{{mentoring_service_branch}}/interface-routes/sunbird-mentoring.json"
    REQUIRED_BASE_PACKAGES = "sunbird-mentoring"

serviceMonitor:
  enabled: true
  labels: # labels with which the prometheus choose the serviceMonitor
    app: prometheus-operator
    release: prometheus-operator

autoscaling:
  enabled: {{ mentoring_interface_service_autoscaling_enabled | default('false') }}
  minReplicas: {{ mentoring_interface_service_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ mentoring_interface_service_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ mentoring_interface_service_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ mentoring_interface_service_autoscaling_targetMemoryUtilizationPercentage|default('') }}

