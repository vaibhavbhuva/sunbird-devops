### Default variable file for discussion_metaupdate_service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ docker_hub_url }}


env:
  javaoptions: {{discussion_metaupdate_service_java_mem_limit|default('-Xmx600m')}}

replicaCount: {{discussion_metaupdate_service_replicacount|default(1)}}
repository: {{ image_discussion_metaupdate_service }}
image_tag: {{image_tag}}
resources:
  requests:
    cpu: {{discussion_metaupdate_service_cpu_req|default('100m')}}
    memory: {{discussion_metaupdate_service_mem_req|default('100Mi')}}
  limits:
    cpu: {{discussion_metaupdate_service_cpu_limit|default('1')}}
    memory: {{discussion_metaupdate_service_mem_limit|default('1024Mi')}}
network:
  port: {{ service_discussion_metaupdate_service_port }}
  targetport: {{ service_discussion_metaupdate_service_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ discussion_metaupdate_service_maxsurge|default('25%') }}
  maxunavailable: {{ discussion_metaupdate_service_maxunavailable|default('25%') }}

discussion_metaupdate_service_backend_basepath: {{ discussion_metaupdate_service_backend_basepath | default('/keys/') }}


serviceMonitor:
  enabled: true
  labels: # labels with which the prometheus choose the serviceMonitor
    app: prometheus-operator
    release: prometheus-operator

autoscaling:
  enabled: {{ discussion_metaupdate_service_autoscaling_enabled | default('false') }}
  minReplicas: {{ discussion_metaupdate_service_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ discussion_metaupdate_service_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ discussion_metaupdate_service_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ discussion_metaupdate_service_autoscaling_targetMemoryUtilizationPercentage|default('') }}

